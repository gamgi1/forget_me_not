<h1 class='page-header'>Create your Account!</h1>
<%= form_for(@user, url: signup_path, html: {class: 'form'}) do |f| %>
  <div class="form-group">
    <%= f.label(:username, class: 'form-label') %>
    <%= f.text_field(:username, class: 'form-control input-lg') %>
  </div>
  <div class="form-group">
    <%= f.label(:password, class: 'form-label') %>
    <%= f.password_field(:password, class: 'form-control input-lg') %>
  </div>
  <div class="form-group">
    <%= f.label(:password_confirmation, class: 'form-label') %>
    <%= f.password_field(:password_confirmation, class: 'form-control input-lg') %>
  </div>
  <div class="form-group">
    <%= f.submit('Signup', class: 'btn btn-lg btn-success') %>
  </div>
<% end %>
