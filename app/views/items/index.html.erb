<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Female</th>
      <th>Required</th>
      <th>Days specific</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.female %></td>
        <td><%= item.required %></td>
        <td><%= item.days_specific %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
